<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <corners android:radius="5dp"/>

    <!-- radial - displays a circle effect -->
    <!-- gradientRadius - how big you want the circle to expand from the center -->
    <!-- centerX - position along the X axis 0 to 1 i.e 0 would the left edge. 0.5 centers -->
    <!-- centerY - position along the Y axis 0 to 1 i.e 0 would the top edge. 0.5 centers -->
    <gradient
        android:type="radial"
        android:gradientRadius="700"
        android:startColor="@color/endCallEndColor"
        android:endColor="@color/endCallStartColor"
        android:centerX="0.5"
        android:centerY="0.5"/>

    <stroke android:width="3dp" android:color="@color/endCallBorderColor"/>
</shape>